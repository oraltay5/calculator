<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_stroked_text"
        android:paddingHorizontal="8dp">

        <EditText
            android:id="@+id/firstVarEdittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="Введите первое число" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/signTextView"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_stroked_text"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:text="*" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_stroked_text"
        android:paddingHorizontal="8dp">

        <EditText
            android:id="@+id/secondVarEdittext"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@null"
            android:hint="Введите второе число" />
    </FrameLayout>

    <TextView
        android:id="@+id/resultTextLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="14dp"
        android:text="Ваш результат:"
        android:textColor="#ACABAB"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:text="20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:weightSum="100">

            <TextView
                android:id="@+id/sevenTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/bg_clickable"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/eightTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/bg_clickable"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/nineTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/bg_clickable"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/multiply"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/bg_sign_clickable"
                android:gravity="center"
                android:text="*"
                android:textColor="@color/black"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:weightSum="100">

            <TextView
                android:id="@+id/fourTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/bg_clickable"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/fiveTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/bg_clickable"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/sixTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/bg_clickable"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/divideTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/bg_sign_clickable"
                android:gravity="center"
                android:text="/"
                android:textColor="@color/black"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:weightSum="100">

            <TextView
                android:id="@+id/oneTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/bg_clickable"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/twoTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/bg_clickable"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/threeTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/bg_clickable"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/minus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/bg_sign_clickable"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:weightSum="100">

            <TextView
                android:id="@+id/zeroTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/bg_clickable"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/dotSign"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/bg_clickable"
                android:gravity="center"
                android:text=","
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/equalSign"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/bg_sign_clickable"
                android:gravity="center"
                android:text="="
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/plusSign"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:background="@drawable/bg_sign_clickable"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="16dp" />
        </LinearLayout>


        <TextView
            android:id="@+id/claerTextView"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:background="@drawable/bg_clear_clickable"
            android:gravity="center"
            android:text="AC"
            android:textColor="@color/black"
            android:textSize="16dp" />

    </LinearLayout>
</LinearLayout>